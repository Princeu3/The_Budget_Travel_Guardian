---
// The Travel Guardian - Intelligent Travel Deal Hunter
import '../styles/globals.css';
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>The Travel Guardian üõ°Ô∏è</title>
    <link rel="icon" type="image/x-icon" href="/travel-guardian-logo.ico" />
    <link rel="icon" type="image/png" href="/travel-guardian-logo.png" />
    <style>
        @keyframes pulse-glow {
            0%, 100% { box-shadow: 0 0 20px #00ff41, 0 0 40px #00ff41; }
            50% { box-shadow: 0 0 30px #00ff41, 0 0 60px #00ff41; }
        }
        @keyframes flicker {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.8; }
        }
        .glow-text {
            text-shadow: 0 0 10px #00ff41, 0 0 20px #00ff41, 0 0 30px #00ff41;
        }
        .purple-glow {
            text-shadow: 0 0 10px #8b00ff, 0 0 20px #8b00ff;
        }
        .animate-pulse-glow {
            animation: pulse-glow 2s ease-in-out infinite;
        }
        .animate-flicker {
            animation: flicker 3s ease-in-out infinite;
        }
    </style>
</head>
<body class="min-h-screen" style="background-color: #0a0a0a;">
    <div class="container mx-auto px-4 py-8 md:py-16">
        <!-- Header -->
        <div class="text-center mb-12 md:mb-16">
            <div class="mb-4 animate-flicker">
                <img src="/travel-guardian-logo.png" alt="Travel Guardian Logo" class="w-24 h-24 md:w-32 md:h-32 mx-auto" />
            </div>
            <h1 class="text-4xl md:text-6xl font-bold mb-4 glow-text" style="color: #00ff41;">
                THE TRAVEL GUARDIAN
            </h1>
            <p class="text-xl md:text-2xl mb-2 purple-glow font-semibold" style="color: #8b00ff;">
                Your guardian hunts while you sleep üõ°Ô∏è
            </p>
            <p class="text-gray-400 text-sm md:text-base max-w-2xl mx-auto">
                Deploy an autonomous travel guardian that monitors prices 24/7,
                stalking the web for the best flight, hotel, and car rental deals
            </p>
        </div>

        <!-- Main Form Card -->
        <div class="max-w-3xl mx-auto rounded-lg overflow-hidden" style="background: linear-gradient(135deg, #1a1a1a 0%, #0a0a0a 100%); border: 2px solid #00ff41;">
            <div class="p-8 md:p-10">
                <div class="flex items-center justify-center mb-8">
                    <img src="/travel-guardian-logo.png" alt="Travel Guardian Logo" class="w-12 h-12 mr-3" />
                    <h2 class="text-2xl md:text-3xl font-bold" style="color: #ffffff;">
                        Activate Your Guardian
                    </h2>
                </div>

                <form id="guardianForm" class="space-y-6">
                    <!-- Trip Details -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label for="origin" class="block text-sm font-semibold mb-2" style="color: #00ff41;">
                                üõ´ Origin City
                            </label>
                            <input
                                type="text"
                                id="origin"
                                name="origin"
                                required
                                placeholder="e.g., New York"
                                class="w-full px-4 py-3 rounded-lg focus:outline-none focus:ring-2 transition"
                                style="background-color: #1a1a1a; color: #ffffff; border: 1px solid #333333; focus:ring-color: #00ff41;"
                            />
                        </div>

                        <div>
                            <label for="destination" class="block text-sm font-semibold mb-2" style="color: #00ff41;">
                                üõ¨ Destination City
                            </label>
                            <input
                                type="text"
                                id="destination"
                                name="destination"
                                required
                                placeholder="e.g., Salem"
                                class="w-full px-4 py-3 rounded-lg focus:outline-none focus:ring-2 transition"
                                style="background-color: #1a1a1a; color: #ffffff; border: 1px solid #333333;"
                            />
                        </div>

                        <div>
                            <label for="startDate" class="block text-sm font-semibold mb-2" style="color: #00ff41;">
                                üìÖ Start Date
                            </label>
                            <input
                                type="date"
                                id="startDate"
                                name="startDate"
                                required
                                class="w-full px-4 py-3 rounded-lg focus:outline-none focus:ring-2 transition"
                                style="background-color: #1a1a1a; color: #ffffff; border: 1px solid #333333;"
                            />
                        </div>

                        <div>
                            <label for="endDate" class="block text-sm font-semibold mb-2" style="color: #00ff41;">
                                üìÖ End Date
                            </label>
                            <input
                                type="date"
                                id="endDate"
                                name="endDate"
                                required
                                class="w-full px-4 py-3 rounded-lg focus:outline-none focus:ring-2 transition"
                                style="background-color: #1a1a1a; color: #ffffff; border: 1px solid #333333;"
                            />
                        </div>
                    </div>

                    <!-- Budget Allocation -->
                    <div class="border-t pt-6" style="border-color: #333333;">
                        <h3 class="text-lg font-bold mb-4 purple-glow" style="color: #8b00ff;">
                            üí∞ Budget Thresholds
                        </h3>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <label for="totalBudget" class="block text-sm font-semibold mb-2" style="color: #ffffff;">
                                    Total Budget ($)
                                </label>
                                <input
                                    type="number"
                                    id="totalBudget"
                                    name="totalBudget"
                                    value="2000"
                                    min="0"
                                    step="50"
                                    required
                                    class="w-full px-4 py-3 rounded-lg focus:outline-none focus:ring-2 transition"
                                    style="background-color: #1a1a1a; color: #ffffff; border: 1px solid #333333;"
                                />
                            </div>

                            <div>
                                <label for="flightBudget" class="block text-sm font-semibold mb-2" style="color: #ffffff;">
                                    ‚úàÔ∏è Flight Budget ($)
                                </label>
                                <input
                                    type="number"
                                    id="flightBudget"
                                    name="flightBudget"
                                    value="800"
                                    min="0"
                                    step="50"
                                    required
                                    class="w-full px-4 py-3 rounded-lg focus:outline-none focus:ring-2 transition"
                                    style="background-color: #1a1a1a; color: #ffffff; border: 1px solid #333333;"
                                />
                            </div>

                            <div>
                                <label for="hotelBudgetPerNight" class="block text-sm font-semibold mb-2" style="color: #ffffff;">
                                    üè® Hotel per Night ($)
                                </label>
                                <input
                                    type="number"
                                    id="hotelBudgetPerNight"
                                    name="hotelBudgetPerNight"
                                    value="150"
                                    min="0"
                                    step="10"
                                    required
                                    class="w-full px-4 py-3 rounded-lg focus:outline-none focus:ring-2 transition"
                                    style="background-color: #1a1a1a; color: #ffffff; border: 1px solid #333333;"
                                />
                            </div>

                            <div>
                                <label for="carBudgetPerDay" class="block text-sm font-semibold mb-2" style="color: #ffffff;">
                                    üöó Car per Day ($)
                                </label>
                                <input
                                    type="number"
                                    id="carBudgetPerDay"
                                    name="carBudgetPerDay"
                                    value="50"
                                    min="0"
                                    step="5"
                                    required
                                    class="w-full px-4 py-3 rounded-lg focus:outline-none focus:ring-2 transition"
                                    style="background-color: #1a1a1a; color: #ffffff; border: 1px solid #333333;"
                                />
                            </div>
                        </div>
                    </div>

                    <!-- Advanced Options (Collapsible) -->
                    <div class="border-t pt-6" style="border-color: #333333;">
                        <button
                            type="button"
                            id="advancedToggle"
                            class="w-full flex justify-between items-center text-left font-bold mb-4 purple-glow hover:opacity-80 transition"
                            style="color: #8b00ff;"
                        >
                            <span>‚öôÔ∏è Advanced Preferences (Optional)</span>
                            <span id="advancedIcon">‚ñº</span>
                        </button>

                        <div id="advancedOptions" class="hidden space-y-6">
                            <!-- Flight Preferences -->
                            <div class="p-4 rounded-lg" style="background-color: #0f0f0f; border: 1px solid #333;">
                                <h4 class="font-bold mb-3" style="color: #00ff41;">‚úàÔ∏è Flight Preferences</h4>
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                    <div>
                                        <label class="block text-sm mb-2" style="color: #ffffff;">Flight Stops</label>
                                        <select name="flightStops" class="w-full px-3 py-2 rounded-lg text-sm" style="background-color: #1a1a1a; color: #ffffff; border: 1px solid #333;">
                                            <option value="any">Any</option>
                                            <option value="direct">Direct Only</option>
                                            <option value="one-stop">One Stop Max</option>
                                            <option value="multi-stop">Multi-Stop OK</option>
                                        </select>
                                    </div>
                                    <div>
                                        <label class="block text-sm mb-2" style="color: #ffffff;">Time of Day</label>
                                        <select name="flightTimeOfDay" class="w-full px-3 py-2 rounded-lg text-sm" style="background-color: #1a1a1a; color: #ffffff; border: 1px solid #333;">
                                            <option value="any">Any Time</option>
                                            <option value="morning">Morning (6 AM - 12 PM)</option>
                                            <option value="afternoon">Afternoon (12 PM - 6 PM)</option>
                                            <option value="evening">Evening (6 PM - 12 AM)</option>
                                            <option value="red-eye">Red-eye (12 AM - 6 AM)</option>
                                        </select>
                                    </div>
                                    <div>
                                        <label class="block text-sm mb-2" style="color: #ffffff;">Preferred Airlines</label>
                                        <input type="text" name="flightAirlines" placeholder="e.g., Delta, United" class="w-full px-3 py-2 rounded-lg text-sm" style="background-color: #1a1a1a; color: #ffffff; border: 1px solid #333;" />
                                        <span class="text-xs text-gray-500">Comma separated</span>
                                    </div>
                                    <div>
                                        <label class="block text-sm mb-2" style="color: #ffffff;">Checked Bags</label>
                                        <input type="number" name="flightBaggage" min="0" max="5" value="1" class="w-full px-3 py-2 rounded-lg text-sm" style="background-color: #1a1a1a; color: #ffffff; border: 1px solid #333;" />
                                    </div>
                                    <div class="col-span-2">
                                        <label class="flex items-center text-sm" style="color: #ffffff;">
                                            <input type="checkbox" name="flightExtraLegroom" class="mr-2" />
                                            Extra Legroom Required
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <!-- Hotel Preferences -->
                            <div class="p-4 rounded-lg" style="background-color: #0f0f0f; border: 1px solid #333;">
                                <h4 class="font-bold mb-3" style="color: #00ff41;">üè® Hotel Preferences</h4>
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                    <div>
                                        <label class="block text-sm mb-2" style="color: #ffffff;">Star Rating (Minimum)</label>
                                        <select name="hotelStarRating" class="w-full px-3 py-2 rounded-lg text-sm" style="background-color: #1a1a1a; color: #ffffff; border: 1px solid #333;">
                                            <option value="0">Any</option>
                                            <option value="3">3 Stars ‚≠ê‚≠ê‚≠ê</option>
                                            <option value="4">4 Stars ‚≠ê‚≠ê‚≠ê‚≠ê</option>
                                            <option value="5">5 Stars ‚≠ê‚≠ê‚≠ê‚≠ê‚≠ê</option>
                                        </select>
                                    </div>
                                    <div>
                                        <label class="block text-sm mb-2" style="color: #ffffff;">Room Type</label>
                                        <select name="hotelRoomType" class="w-full px-3 py-2 rounded-lg text-sm" style="background-color: #1a1a1a; color: #ffffff; border: 1px solid #333;">
                                            <option value="any">Any</option>
                                            <option value="single">Single</option>
                                            <option value="double">Double</option>
                                            <option value="suite">Suite</option>
                                        </select>
                                    </div>
                                    <div>
                                        <label class="block text-sm mb-2" style="color: #ffffff;">Cancellation Policy</label>
                                        <select name="hotelCancellation" class="w-full px-3 py-2 rounded-lg text-sm" style="background-color: #1a1a1a; color: #ffffff; border: 1px solid #333;">
                                            <option value="any">Any</option>
                                            <option value="flexible">Flexible (Free cancellation)</option>
                                            <option value="moderate">Moderate</option>
                                            <option value="strict">Strict (Best price)</option>
                                        </select>
                                    </div>
                                    <div class="col-span-2">
                                        <label class="block text-sm mb-2" style="color: #ffffff;">Required Amenities</label>
                                        <div class="grid grid-cols-2 gap-2">
                                            <label class="flex items-center text-xs">
                                                <input type="checkbox" name="hotelWifi" value="wifi" class="mr-2" />
                                                Free WiFi
                                            </label>
                                            <label class="flex items-center text-xs">
                                                <input type="checkbox" name="hotelBreakfast" value="breakfast" class="mr-2" />
                                                Breakfast Included
                                            </label>
                                            <label class="flex items-center text-xs">
                                                <input type="checkbox" name="hotelPool" value="pool" class="mr-2" />
                                                Pool
                                            </label>
                                            <label class="flex items-center text-xs">
                                                <input type="checkbox" name="hotelGym" value="gym" class="mr-2" />
                                                Gym
                                            </label>
                                            <label class="flex items-center text-xs">
                                                <input type="checkbox" name="hotelParking" value="parking" class="mr-2" />
                                                Free Parking
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Car Rental Preferences -->
                            <div class="p-4 rounded-lg" style="background-color: #0f0f0f; border: 1px solid #333;">
                                <h4 class="font-bold mb-3" style="color: #00ff41;">üöó Car Rental Preferences</h4>
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                    <div>
                                        <label class="block text-sm mb-2" style="color: #ffffff;">Vehicle Type</label>
                                        <select name="carVehicleType" class="w-full px-3 py-2 rounded-lg text-sm" style="background-color: #1a1a1a; color: #ffffff; border: 1px solid #333;">
                                            <option value="any">Any</option>
                                            <option value="economy">Economy</option>
                                            <option value="compact">Compact</option>
                                            <option value="midsize">Midsize</option>
                                            <option value="fullsize">Full-size</option>
                                            <option value="suv">SUV</option>
                                            <option value="luxury">Luxury</option>
                                        </select>
                                    </div>
                                    <div>
                                        <label class="block text-sm mb-2" style="color: #ffffff;">Transmission</label>
                                        <select name="carTransmission" class="w-full px-3 py-2 rounded-lg text-sm" style="background-color: #1a1a1a; color: #ffffff; border: 1px solid #333;">
                                            <option value="any">Any</option>
                                            <option value="automatic">Automatic</option>
                                            <option value="manual">Manual</option>
                                        </select>
                                    </div>
                                    <div>
                                        <label class="block text-sm mb-2" style="color: #ffffff;">Mileage</label>
                                        <select name="carMileage" class="w-full px-3 py-2 rounded-lg text-sm" style="background-color: #1a1a1a; color: #ffffff; border: 1px solid #333;">
                                            <option value="unlimited">Unlimited</option>
                                            <option value="limited">Limited (Cheaper)</option>
                                        </select>
                                    </div>
                                    <div class="col-span-2">
                                        <label class="block text-sm mb-2" style="color: #ffffff;">Features</label>
                                        <div class="grid grid-cols-2 gap-2">
                                            <label class="flex items-center text-xs">
                                                <input type="checkbox" name="carGPS" value="gps" class="mr-2" />
                                                GPS Navigation
                                            </label>
                                            <label class="flex items-center text-xs">
                                                <input type="checkbox" name="carBluetooth" value="bluetooth" class="mr-2" />
                                                Bluetooth
                                            </label>
                                            <label class="flex items-center text-xs">
                                                <input type="checkbox" name="carBackupCamera" value="backup-camera" class="mr-2" />
                                                Backup Camera
                                            </label>
                                            <label class="flex items-center text-xs">
                                                <input type="checkbox" name="carUSB" value="usb" class="mr-2" />
                                                USB Ports
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Submit Button -->
                    <button
                        type="submit"
                        class="w-full py-4 px-6 rounded-lg font-bold text-lg transition transform hover:scale-105 animate-pulse-glow"
                        style="background-color: #00ff41; color: #0a0a0a;"
                    >
                        ü§ñ ACTIVATE GUARDIAN ü§ñ
                    </button>
                </form>
            </div>
        </div>

        <!-- Info Cards -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-5xl mx-auto mt-12">
            <div class="p-6 rounded-lg text-center" style="background-color: #1a1a1a; border: 1px solid #333333;">
                <div class="text-3xl mb-2">‚ö°</div>
                <h3 class="font-bold mb-2" style="color: #00ff41;">Real-time Hunting</h3>
                <p class="text-sm text-gray-400">Agent checks every 30 seconds</p>
            </div>

            <div class="p-6 rounded-lg text-center" style="background-color: #1a1a1a; border: 1px solid #333333;">
                <div class="text-3xl mb-2">üéØ</div>
                <h3 class="font-bold mb-2" style="color: #8b00ff;">Smart Targeting</h3>
                <p class="text-sm text-gray-400">Only alerts on budget matches</p>
            </div>

            <div class="p-6 rounded-lg text-center" style="background-color: #1a1a1a; border: 1px solid #333333;">
                <div class="text-3xl mb-2">üìä</div>
                <h3 class="font-bold mb-2" style="color: #00ff41;">Price History</h3>
                <p class="text-sm text-gray-400">Track deals over time</p>
            </div>
        </div>

        <!-- Footer -->
        <div class="text-center mt-12 text-sm text-gray-500">
            <p>Built for The Travel Guardian Platform 2024 üõ°Ô∏è</p>
        </div>
    </div>

    <script>
        // Toggle advanced options
        document.getElementById('advancedToggle')?.addEventListener('click', () => {
            const options = document.getElementById('advancedOptions');
            const icon = document.getElementById('advancedIcon');
            
            if (options?.classList.contains('hidden')) {
                options.classList.remove('hidden');
                if (icon) icon.textContent = '‚ñ≤';
            } else {
                options?.classList.add('hidden');
                if (icon) icon.textContent = '‚ñº';
            }
        });

        document.getElementById('guardianForm')?.addEventListener('submit', async (e) => {
            e.preventDefault();

            const formData = new FormData(e.target as HTMLFormElement);
            
            // Build basic trip details
            const tripDetails: any = {
                origin: formData.get('origin') as string,
                destination: formData.get('destination') as string,
                startDate: formData.get('startDate') as string,
                endDate: formData.get('endDate') as string,
                totalBudget: Number(formData.get('totalBudget')),
                flightBudget: Number(formData.get('flightBudget')),
                hotelBudgetPerNight: Number(formData.get('hotelBudgetPerNight')),
                carBudgetPerDay: Number(formData.get('carBudgetPerDay')),
            };

            // Build flight preferences if any are set
            const flightStops = formData.get('flightStops') as string;
            const flightTimeOfDay = formData.get('flightTimeOfDay') as string;
            const flightAirlines = formData.get('flightAirlines') as string;
            const flightBaggage = formData.get('flightBaggage') as string;
            const flightExtraLegroom = formData.get('flightExtraLegroom') as string;

            if (flightStops !== 'any' || flightTimeOfDay !== 'any' || flightAirlines || flightBaggage || flightExtraLegroom) {
                tripDetails.flightPreferences = {};
                if (flightStops !== 'any') tripDetails.flightPreferences.stops = flightStops;
                if (flightTimeOfDay !== 'any') tripDetails.flightPreferences.timeOfDay = flightTimeOfDay;
                if (flightAirlines) tripDetails.flightPreferences.preferredAirlines = flightAirlines.split(',').map((a: string) => a.trim());
                if (flightBaggage) tripDetails.flightPreferences.baggageCount = Number(flightBaggage);
                if (flightExtraLegroom) tripDetails.flightPreferences.extraLegroom = true;
            }

            // Build hotel preferences
            const hotelStarRating = Number(formData.get('hotelStarRating'));
            const hotelRoomType = formData.get('hotelRoomType') as string;
            const hotelCancellation = formData.get('hotelCancellation') as string;
            const hotelAmenities = [];
            if (formData.get('hotelWifi')) hotelAmenities.push('wifi');
            if (formData.get('hotelBreakfast')) hotelAmenities.push('breakfast');
            if (formData.get('hotelPool')) hotelAmenities.push('pool');
            if (formData.get('hotelGym')) hotelAmenities.push('gym');
            if (formData.get('hotelParking')) hotelAmenities.push('parking');

            if (hotelStarRating > 0 || hotelRoomType !== 'any' || hotelCancellation !== 'any' || hotelAmenities.length > 0) {
                tripDetails.hotelPreferences = {};
                if (hotelStarRating > 0) tripDetails.hotelPreferences.starRating = hotelStarRating;
                if (hotelRoomType !== 'any') tripDetails.hotelPreferences.roomType = hotelRoomType;
                if (hotelCancellation !== 'any') tripDetails.hotelPreferences.cancellationPolicy = hotelCancellation;
                if (hotelAmenities.length > 0) tripDetails.hotelPreferences.amenities = hotelAmenities;
            }

            // Build car rental preferences
            const carVehicleType = formData.get('carVehicleType') as string;
            const carTransmission = formData.get('carTransmission') as string;
            const carMileage = formData.get('carMileage') as string;
            const carFeatures = [];
            if (formData.get('carGPS')) carFeatures.push('gps');
            if (formData.get('carBluetooth')) carFeatures.push('bluetooth');
            if (formData.get('carBackupCamera')) carFeatures.push('backup-camera');
            if (formData.get('carUSB')) carFeatures.push('usb');

            if (carVehicleType !== 'any' || carTransmission !== 'any' || carMileage || carFeatures.length > 0) {
                tripDetails.carRentalPreferences = {};
                if (carVehicleType !== 'any') tripDetails.carRentalPreferences.vehicleType = carVehicleType;
                if (carTransmission !== 'any') tripDetails.carRentalPreferences.transmission = carTransmission;
                if (carMileage) tripDetails.carRentalPreferences.mileage = carMileage;
                if (carFeatures.length > 0) tripDetails.carRentalPreferences.features = carFeatures;
            }

            // Store in localStorage
            localStorage.setItem('tripDetails', JSON.stringify(tripDetails));

            // Redirect to dashboard
            window.location.href = '/dashboard';
        });

        // Set min date to today
        const today = new Date().toISOString().split('T')[0];
        const startDateInput = document.getElementById('startDate') as HTMLInputElement;
        const endDateInput = document.getElementById('endDate') as HTMLInputElement;

        if (startDateInput) startDateInput.min = today;
        if (endDateInput) endDateInput.min = today;

        // Update end date min when start date changes
        startDateInput?.addEventListener('change', (e) => {
            const target = e.target as HTMLInputElement;
            if (endDateInput) endDateInput.min = target.value;
        });
    </script>
</body>
</html>
