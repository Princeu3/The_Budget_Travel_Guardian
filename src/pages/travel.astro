---
// Landing page for travel deal monitoring
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Travel Deal Monitor</title>
</head>
<body class="bg-gradient-to-br from-blue-50 to-indigo-100 min-h-screen">
    <div class="container mx-auto px-4 py-12">
        <div class="max-w-2xl mx-auto">
            <div class="text-center mb-8">
                <h1 class="text-4xl font-bold text-gray-900 mb-2">Travel Deal Monitor</h1>
                <p class="text-gray-600">Track flight, hotel, and car rental prices in real-time</p>
            </div>

            <div class="bg-white rounded-lg shadow-xl p-8">
                <form id="tripForm" class="space-y-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label for="origin" class="block text-sm font-medium text-gray-700 mb-2">
                                Origin City
                            </label>
                            <input
                                type="text"
                                id="origin"
                                name="origin"
                                required
                                placeholder="e.g., New York"
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                            />
                        </div>

                        <div>
                            <label for="destination" class="block text-sm font-medium text-gray-700 mb-2">
                                Destination City
                            </label>
                            <input
                                type="text"
                                id="destination"
                                name="destination"
                                required
                                placeholder="e.g., Paris"
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                            />
                        </div>

                        <div>
                            <label for="startDate" class="block text-sm font-medium text-gray-700 mb-2">
                                Start Date
                            </label>
                            <input
                                type="date"
                                id="startDate"
                                name="startDate"
                                required
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                            />
                        </div>

                        <div>
                            <label for="endDate" class="block text-sm font-medium text-gray-700 mb-2">
                                End Date
                            </label>
                            <input
                                type="date"
                                id="endDate"
                                name="endDate"
                                required
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                            />
                        </div>
                    </div>

                    <div class="border-t border-gray-200 pt-6">
                        <h3 class="text-lg font-semibold text-gray-900 mb-4">Budget Allocation</h3>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <label for="totalBudget" class="block text-sm font-medium text-gray-700 mb-2">
                                    Total Budget ($)
                                </label>
                                <input
                                    type="number"
                                    id="totalBudget"
                                    name="totalBudget"
                                    value="2000"
                                    min="0"
                                    step="50"
                                    required
                                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                                />
                            </div>

                            <div>
                                <label for="flightBudget" class="block text-sm font-medium text-gray-700 mb-2">
                                    Flight Budget ($)
                                </label>
                                <input
                                    type="number"
                                    id="flightBudget"
                                    name="flightBudget"
                                    value="800"
                                    min="0"
                                    step="50"
                                    required
                                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                                />
                            </div>

                            <div>
                                <label for="hotelBudgetPerNight" class="block text-sm font-medium text-gray-700 mb-2">
                                    Hotel Budget per Night ($)
                                </label>
                                <input
                                    type="number"
                                    id="hotelBudgetPerNight"
                                    name="hotelBudgetPerNight"
                                    value="150"
                                    min="0"
                                    step="10"
                                    required
                                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                                />
                            </div>

                            <div>
                                <label for="carBudgetPerDay" class="block text-sm font-medium text-gray-700 mb-2">
                                    Car Budget per Day ($)
                                </label>
                                <input
                                    type="number"
                                    id="carBudgetPerDay"
                                    name="carBudgetPerDay"
                                    value="50"
                                    min="0"
                                    step="5"
                                    required
                                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                                />
                            </div>
                        </div>
                    </div>

                    <button
                        type="submit"
                        class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-6 rounded-lg transition duration-200 ease-in-out transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
                    >
                        Start Monitoring Prices
                    </button>
                </form>
            </div>

            <div class="text-center mt-6 text-sm text-gray-600">
                <p>We'll monitor prices every 30 seconds and alert you when deals match your budget</p>
            </div>
        </div>
    </div>

    <script>
        document.getElementById('tripForm')?.addEventListener('submit', async (e) => {
            e.preventDefault();

            const formData = new FormData(e.target as HTMLFormElement);
            const tripDetails = {
                origin: formData.get('origin') as string,
                destination: formData.get('destination') as string,
                startDate: formData.get('startDate') as string,
                endDate: formData.get('endDate') as string,
                totalBudget: Number(formData.get('totalBudget')),
                flightBudget: Number(formData.get('flightBudget')),
                hotelBudgetPerNight: Number(formData.get('hotelBudgetPerNight')),
                carBudgetPerDay: Number(formData.get('carBudgetPerDay')),
            };

            // Store in sessionStorage and navigate to dashboard
            sessionStorage.setItem('tripDetails', JSON.stringify(tripDetails));
            window.location.href = '/travel-dashboard';
        });

        // Set min date to today
        const today = new Date().toISOString().split('T')[0];
        const startDateInput = document.getElementById('startDate') as HTMLInputElement;
        const endDateInput = document.getElementById('endDate') as HTMLInputElement;

        if (startDateInput) startDateInput.min = today;
        if (endDateInput) endDateInput.min = today;

        // Update end date min when start date changes
        startDateInput?.addEventListener('change', (e) => {
            const target = e.target as HTMLInputElement;
            if (endDateInput) endDateInput.min = target.value;
        });
    </script>
</body>
</html>
